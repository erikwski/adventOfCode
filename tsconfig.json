{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": false /* Enable all strict type-checking options. */,
    "strictNullChecks": false /* Take into account 'null' and 'undefined' during type checking. */,
    "noImplicitAny": false /* Ensure that all types must be explicitly declared. */,
    "noImplicitReturns": false /* Error if a function does not explicitly return. */,
    "noImplicitOverride": false /* Ensure overriding members in derived classes are marked with an override modifier. */,

    /* Completeness */
    "skipLibCheck": true /* Skip type checking of declaration files. */,
    "skipDefaultLibCheck": true /* Skip checking default library files. */
  }
}
